<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <corners android:radius="@dimen/_3sdp"/>
            <solid android:color="@color/chatheaderbg"></solid>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape>
            <corners android:radius="@dimen/_3sdp"/>
            <solid android:color="@color/white"></solid>
        </shape>
    </item>
    <item>
        <layer-list>
            <item android:top="@dimen/_minus1sdp" android:bottom="@dimen/_minus1sdp" android:left="@dimen/_minus1sdp">
                <shape>
                    <corners android:radius="@dimen/_3sdp"/>
                    <solid android:color="@android:color/white"></solid>
                    <stroke android:width="1dp" android:color="@color/chatheaderbg"></stroke>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

