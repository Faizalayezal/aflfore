<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginVertical="@dimen/_10sdp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/plan_border"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtdesc"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="wrap_content"
            tools:text="Unlimited Likes &amp; Dislikes"
            android:gravity="start"
            android:paddingVertical="@dimen/_10sdp"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_10sdp"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/poppins_semibold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/subsymbol"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="@dimen/_12sdp"
                android:src="@drawable/rightbe"/>

            <TextView
                android:id="@+id/besicTxt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="0"
                android:textColor="@color/bottom"
                android:visibility="gone"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:textSize="@dimen/_13ssp"
                android:layout_height="wrap_content"/>


            <View
                android:layout_width="@dimen/_25ssp"
                android:layout_height="@dimen/_12sdp"/>



            <ImageView
                android:id="@+id/subsymbol2"
                android:layout_width="0dp"
                android:layout_height="@dimen/_12sdp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/rightpre"/>

            <TextView
                android:id="@+id/premiumTxt"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="10"
                android:textColor="#F19264"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="@dimen/_13ssp"
                android:layout_height="wrap_content"/>

        </LinearLayout>



<!--
        <ImageView
            android:id="@+id/subsymbol"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:src="@drawable/circlecheck"/>
-->

    </LinearLayout>


